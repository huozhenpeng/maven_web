<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.IAccountDao">

    <select id="findAll" resultType="mybatis.Account">
        select * from account
    </select>

    <select id="findById" resultType="mybatis.Account" parameterType="int">
        select * from account where id = #{id}
    </select>

<!--    注意标签别写错了 insert-->
    <insert id="saveAccount" parameterType="mybatis.Account" >
        insert into account (balance, username, age, address, password)
        values (#{balance}, #{username}, #{age}, #{address}, #{password})
    </insert>

</mapper>